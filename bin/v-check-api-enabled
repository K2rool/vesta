#!/bin/bash
# info: check if the api is enabled
#
# The function checks if the API is enabled


#----------------------------------------------------------#
#                    Variable&Function                     #
#----------------------------------------------------------#

source $VESTA/conf/vesta.conf

#----------------------------------------------------------#
#                       Action                             #
#----------------------------------------------------------#

if [ -z $API ]; then
    exit 10
fi

if [ "$API" = "no" ]; then
    exit 10
fi

#----------------------------------------------------------#
#                       Vesta                              #
#----------------------------------------------------------#

exit
